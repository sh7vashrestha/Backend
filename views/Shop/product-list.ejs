<%- include('../includes/head.ejs') %>
   <link rel="stylesheet" href="shop.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (prods.length>0){%>
            <div class="grid">
                    <% for(let product of prods){%>
                     <article class="card product-item">
                        <header class="card__header"> 
                            <h1 class="product_title"> <%=product.title%> </h1>
                            </header>
                        <div class="card_image">
                            <img src="https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1586722975i/2767052._UY475_SS475_.jpg", alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price"> $19.89</h2>
                            <p class="product__description"> A very intresting book to study tbh! </p>
                        </div>
                        <div class="card__action">
                            <button class="btn"> Add to cart </button>
                        
                        </div>
                        
                        </article>
                        <% } %>
            </div>
        <% } else{%>
            <h1>No products found</h1>
        <%}%>
    </main>
<%- include('../includes/end.ejs') %>